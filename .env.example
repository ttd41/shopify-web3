# ===== Server & Modes =====
PORT=3000
DEV_MODE=1                    # 1 = skip HMAC verification for quick local tests (still signed in mock script)

# ===== Shopify Webhook =====
SHOPIFY_WEBHOOK_SECRET=devsecret

# ===== Splits (bps = 1/100 of a percent) =====
SPLIT_PAYEES=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266,0x70997970C51812dc3A010C7d01b50e0d17dc79C8
SPLIT_SHARES_BPS=5000,5000    # 50% / 50% ; must sum to 10000

# Fees deducted before split (optional)
FEES_BPS=0

# ===== Chain / Contracts =====
RPC_URL=http://127.0.0.1:8545
# Use the second Hardhat account as "executor/oracle" by default:
EXECUTOR_PRIVATE_KEY=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# If you deploy locally with scripts/deploy.js, these will be filled from app/deployments.local.json automatically.
# Otherwise override here:
# TOKEN_ADDRESS=0x...
# CONTRACT_ADDRESS=0x...

# Base URL for executor to call back into the server
SERVICE_BASE_URL=http://127.0.0.1:3000

# Executor loop period (ms)
EXECUTOR_INTERVAL_MS=15000

# Token decimals (USDC is 6)
TOKEN_DECIMALS=6
